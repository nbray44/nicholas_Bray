# --- Build Stage ---
# Use a Maven image with OpenJDK 17 as the base for building the application
FROM maven:3.8.4-openjdk-17 AS build

# Set the working directory for all subsequent build commands
WORKDIR /app

# Copy the Maven project file and source code into the container
COPY pom.xml .
COPY src ./src

# Execute Maven to package the application into an executable JAR file
# Tests are skipped to optimize build time in the container environment
RUN mvn clean package -DskipTests

# --- Runtime Stage ---
# Use a slim OpenJDK image to minimize the final production image size
FROM openjdk:17-jdk-slim

# Set the working directory for the runtime environment
WORKDIR /app

# Copy only the compiled JAR file from the build stage to the runtime stage
COPY --from=build /app/target/*.jar app.jar

# Inform Docker that the container listens on port 8080 at runtime
EXPOSE 8080

# Configure the container to run as an executable using the JAR file
ENTRYPOINT ["java", "-jar", "app.jar"]
